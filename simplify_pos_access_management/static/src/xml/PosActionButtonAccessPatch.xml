        </xpath>
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div/button[@t-on-click='() => this.clickRefund()']" position="attributes">
            <attribute name="t-if">access.isRefundAvailable</attribute> 
        </xpath>
