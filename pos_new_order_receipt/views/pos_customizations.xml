<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit and override the OrderChangeReceipt template -->
        <template id="custom_order_change_receipt" inherit_id="point_of_sale.OrderChangeReceipt">
            <xpath expr="//div[@class='receipt-header']" position="replace">
                <div class="receipt-header text-center" style="background-color: #f4f4f4;">
                    <!-- Custom header styles -->
                    <div class="pos-receipt-title" style="color: #ff0000;">
                        <t t-esc="changes.config_name" /> | <t t-esc="changes.time" />
                    </div>
                    <div class="fs-2">
                        <span><t t-esc="changes.employee_name" /></span>
                    </div>
                </div>
            </xpath>
            <!-- Add more style overrides here -->
        </template>
    </data>
</odoo>
