<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="point_of_sale.TicketScreen">
        <!-- Extend the header row to include the General Note column -->
        <t t-jquery=".header-row" t-operation="append">
            <div class="col wide p-2">General Note</div>
        </t>

        <!-- Extend the order rows to display the General Note -->
        <t t-jquery=".order-row" t-operation="append">
            <div class="col wide p-2">
                <t t-esc="order.general_note || 'N/A'"/>
            </div>
        </t>
    </t>
</templates>